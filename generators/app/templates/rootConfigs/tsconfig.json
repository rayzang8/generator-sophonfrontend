{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext", 
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDeclarationOnly": true,        
        "declaration": true,
        "isolatedModules": false,
        "jsx": "react",
        "baseUrl": "./src",
        "rootDir": "./src",
        "paths": {
            "#assets/*": [
                "assets/*"
            ],
            "#locales": [
                "locales/i18nInstance.ts"
            ],

        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/menu/*"
    ]
}